    <script is:inline>
      (function () {
        // â”€â”€ Palette: warm romantic tones â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
        const PALETTE = [
          "#e8577a",
          "#f28baa",
          "#f7b3c2",
          "#c94070",
          "#e07090",
          "#ffc2d1",
          "#d95e88",
          "#f5a0b8",
          "#b03060",
          "#f9ccd8",
        ];
        // â”€â”€ State â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
        let items = [];
        let angle = 0; // current rotation (radians)
        let velocity = 0; // radians per frame
        let p5inst = null;

        // â”€â”€ DOM â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
        const input = document.getElementById("item-input");
        const addBtn = document.getElementById("add-btn");
        const spinBtn = document.getElementById("spin-btn");
        const clearBtn = document.getElementById("clear-btn");
        const listEl = document.getElementById("items-list");

        // â”€â”€ Items â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
        function addItem() {
          const v = input.value.trim();
          if (!v) return;
          items.push(v);
          input.value = "";
          renderList();
          updateBtn();
          rebuildSketch();
        }

        function removeItem(i) {
          items.splice(i, 1);
          renderList();
          updateBtn();
          rebuildSketch();
        }

        function renderList() {
          listEl.innerHTML = "";
          items.forEach((item, i) => {
            const li = document.createElement("li");
            li.className = "list-item";
            li.style.setProperty("--clr", PALETTE[i % PALETTE.length]);
            li.innerHTML = `
          <span class="list-dot"></span>
          <span class="list-label">${item}</span>
          <button class="remove-btn" data-i="${i}">âœ•</button>
        `;
            listEl.appendChild(li);
          });
          listEl
            .querySelectorAll(".remove-btn")
            .forEach((b) =>
              b.addEventListener("click", () => removeItem(+b.dataset.i)),
            );
        }

        // â”€â”€ Button scale growth â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
        const BTN_SCALE_MIN = 1.0;
        const BTN_SCALE_MAX = 1.5;
        const BTN_SCALE_STEP = 0.07; // per press
        let btnScale = BTN_SCALE_MIN;

        function updateBtn() {
          spinBtn.disabled = items.length < 2;
        }

        function clearAll() {
          items = [];
          velocity = 0;
          angle = 0;
          btnScale = BTN_SCALE_MIN;
          spinBtn.style.transform = `scale(${BTN_SCALE_MIN})`;
          renderList();
          updateBtn();
          rebuildSketch();
        }

        // â”€â”€ Physics-based spin â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
        // velocity = radians per frame (at 60fps)
        // Each button press adds velocity, capped at MAX_VELOCITY
        // Wheel decelerates via friction each frame
        // Confetti fires once when wheel comes to rest

        const MAX_VELOCITY = 0.55; // rad/frame  (~1 full rotation per ~22 frames)
        const VELOCITY_BOOST = 0.18; // added per button press
        const FRICTION = 0.97; // multiplied each frame
        const STOP_THRESHOLD = 0.001; // rad/frame â€” considered stopped

        let wasMoving = false; // track transition movingâ†’stopped for confetti

        function spin() {
          if (items.length < 2) return;

          // Add velocity boost, capped at max
          velocity = Math.min(velocity + VELOCITY_BOOST, MAX_VELOCITY);

          // Grow button scale, capped at max
          btnScale = Math.min(btnScale + BTN_SCALE_STEP, BTN_SCALE_MAX);
          spinBtn.style.transform = `scale(${btnScale.toFixed(3)})`;

          wasMoving = true;
        }

        // â”€â”€ Called when wheel stops â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
        function onWheelStop() {
          btnScale = BTN_SCALE_MIN;
          spinBtn.style.transform = "scale(1)";
          confetti({
            particleCount: 90,
            spread: 70,
            colors: ["#e8577a", "#f2a7bb", "#fdf4ef", "#c94070", "#f9ccd8"],
            origin: { y: 0.55 },
          });
        }

        // â”€â”€ p5 sketch â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
        function rebuildSketch() {
          if (p5inst) {
            p5inst.remove();
            p5inst = null;
          }
          const wrap = document.getElementById("canvas-wrapper");

          p5inst = new p5(function (p) {
            let SIZE, CX, CY, R;

            function updateSize() {
              SIZE =
                wrap.clientWidth || wrap.getBoundingClientRect().width || 300;
              CX = SIZE / 2;
              CY = SIZE / 2;
              R = SIZE * 0.44;
              p.resizeCanvas(SIZE, SIZE);
            }

            p.setup = function () {
              const initSize = wrap.clientWidth || 300;
              p.createCanvas(initSize, initSize).parent("canvas-wrapper");
              p.angleMode(p.RADIANS);
              p.textFont("serif");
              updateSize();
            };

            p.windowResized = function () {
              updateSize();
            };

            p.draw = function () {
              p.clear();
              p.background(253, 244, 239); // --cream

              // Physics: apply velocity then friction each frame
              if (velocity > STOP_THRESHOLD) {
                angle += velocity;
                velocity *= FRICTION;
                wasMoving = true;
              } else if (wasMoving) {
                velocity = 0;
                wasMoving = false;
                onWheelStop();
              }

              drawWheel(p, CX, CY, R);
              drawPointer(p, CX, CY, R);
              drawHub(p, CX, CY);
            };
          }, wrap);
        }

        function drawWheel(p, cx, cy, r) {
          if (items.length === 0) {
            // decorative empty ring
            for (let i = 0; i < 3; i++) {
              const alpha = 80 - i * 25;
              p.noFill();
              p.stroke(232, 87, 122, alpha);
              p.strokeWeight(3 - i * 0.8);
              p.circle(cx, cy, (r - i * 8) * 2);
            }
            p.noStroke();
            p.fill(180, 120, 140);
            p.textAlign(p.CENTER, p.CENTER);
            p.textSize(13);
            p.text("Agrega plansitos ðŸ©·", cx, cy);
            return;
          }

          const n = items.length;
          const slice = (Math.PI * 2) / n;

          // subtle outer glow ring
          p.noFill();
          p.stroke(232, 87, 122, 30);
          p.strokeWeight(20);
          p.circle(cx, cy, r * 2);

          for (let i = 0; i < n; i++) {
            const start = angle + i * slice - Math.PI / 2;
            const end = start + slice;
            const col = p.color(PALETTE[i % PALETTE.length]);

            // slice
            p.fill(col);
            p.noStroke();
            p.arc(cx, cy, r * 2, r * 2, start, end, p.PIE);

            // divider
            p.stroke(253, 244, 239);
            p.strokeWeight(2);
            p.line(cx, cy, cx + r * Math.cos(start), cy + r * Math.sin(start));

            // text pill
            const mid = start + slice / 2;
            const tx = cx + r * 0.6 * Math.cos(mid);
            const ty = cy + r * 0.6 * Math.sin(mid);

            p.push();
            p.translate(tx, ty);
            p.rotate(mid + Math.PI / 2);

            const label =
              items[i].length > 13 ? items[i].slice(0, 12) + "â€¦" : items[i];
            const tsize = Math.max(9, Math.min(13, 170 / n));
            p.textSize(tsize);
            const tw = p.textWidth(label) + 12;

            p.fill(0, 0, 0, 120);
            p.noStroke();
            p.rect(-tw / 2, -10, tw, 20, 6);

            p.fill(255, 255, 255, 230);
            p.textAlign(p.CENTER, p.CENTER);
            p.text(label, 0, 0);
            p.pop();
          }

          // outer ring
          p.noFill();
          p.stroke(232, 87, 122, 100);
          p.strokeWeight(3);
          p.circle(cx, cy, r * 2);
        }

        function drawPointer(p, cx, cy, r) {
          const py = cy - r - 2;
          // shadow
          p.noStroke();
          p.fill(0, 0, 0, 60);
          p.triangle(cx - 13, py - 26, cx + 13, py - 26, cx, py + 3);
          // pointer body
          p.fill(232, 87, 122);
          p.triangle(cx - 11, py - 28, cx + 11, py - 28, cx, py + 1);
          // heart tip
          p.textAlign(p.CENTER, p.CENTER);
          p.textSize(14);
          p.noStroke();
          p.fill(255);
          p.text("â™¥", cx, py - 22);
        }

        function drawHub(p, cx, cy) {
          p.noStroke();
          // outer
          p.fill(253, 244, 239);
          p.circle(cx, cy, 46);
          p.stroke(232, 87, 122, 120);
          p.strokeWeight(2);
          p.noFill();
          p.circle(cx, cy, 46);
          // inner
          p.noStroke();
          p.fill(242, 167, 187, 180);
          p.circle(cx, cy, 22);
          // heart center
          p.textAlign(p.CENTER, p.CENTER);
          p.textSize(11);
          p.fill(255, 255, 255, 200);
          p.text("â™¥", cx, cy);
        }

        // â”€â”€ Events â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€
        addBtn.addEventListener("click", addItem);
        input.addEventListener("keydown", (e) => {
          if (e.key === "Enter") addItem();
        });

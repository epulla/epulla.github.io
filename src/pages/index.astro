<script is:inline src="https://unpkg.com/@popperjs/core@2"></script>
<script is:inline src="https://unpkg.com/tippy.js@6"></script>
<script is:inline>
  tippy("[data-tippy-content]", {
    placement: "bottom",
    theme: "light",
  });

  const copyEmailBtnTippy = tippy("#copy-email-btn", {
    placement: "bottom",
    theme: "light",
    hideOnClick: false,
  })[0];

  // copy mail to clipboard
  // reference: https://www.w3schools.com/howto/howto_js_copy_clipboard.asp
  const copyEmailBtn = document.getElementById("copy-email-btn");
  copyEmailBtn.addEventListener("click", () => {
    const mailElement = document.getElementById("mail");
    // Select the text field
    mailElement.select();
    mailElement.setSelectionRange(0, 99999); // For mobile devices

    // Copy the text inside the text field
    if (navigator.clipboard) {
      navigator.clipboard.writeText(mailElement.value);
      copyEmailBtnTippy.setContent("Copied!");

      setTimeout(() => {
        copyEmailBtnTippy.setContent("Copy");
      }, 4000);
    } else {
      // alert("hey")
      mailElement.removeAttribute("disabled");
      mailElement.setAttribute("readonly", true);
      mailElement.select();
    }
  });
</script>

<style is:global>
  .dark .tippy-box[data-theme~="light"] {
    background-color: #fff;
    color: #111827;
  }

  .dark
    .tippy-box[data-theme~="light"][data-placement^="top"]
    > .tippy-arrow::before {
    border-top-color: #fff;
  }
  .dark
